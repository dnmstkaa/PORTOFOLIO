<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/logohobby"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/hobby"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:layout_gravity="center"
                app:tint="#FD0D5E"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/namahobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TeacherApps"
                    android:fontFamily="@font/librebold"
                    android:textColor="#FD0D5E"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deschobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project latihan membuat Aplikasi TeacherApps berbasis Android"
                    android:textStyle="italic"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>